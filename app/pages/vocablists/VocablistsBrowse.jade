gelato-page(data-name='vocablists-browse')
  section.container
    #expiration-container
    .content-block
      .row
        .col-md-3.sidebar
          #vocablist-sidebar-container
        .col-md-9.main-content
          .title-wrapper
            .title Browse Lists
            .explaination These are Skritter-reviewed lists for the most popular textbooks and standardized tests
          #table-options
            .row
              .col-md-10
                .input-group.input-group-lg
                  span.input-group-addon
                    i.fa.fa-search
                  input#list-search-input.form-control(
                  type="text",
                  value=app.get('lastVocablistBrowseSearch'),
                  placeholder="Type to search by title"
                  )
              .col-md-1
                span#list-option.glyphicon.glyphicon-th-list.layout-selector.chosen
              .col-md-1
                span#grid-option.glyphicon.glyphicon-th-large.layout-selector
            // TODO: support checkbox filters
            //- .form-inline
              label View only:
              .checkbox
                label
                  input#textbooks(type="checkbox" name='textbooks')
                  span Textbooks
              .checkbox
                label
                  input#other-official-lists(type="checkbox" name='other-official')
                  span Other official lists
          #vocablist-container
