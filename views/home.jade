doctype html

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  title Skritter - Learn to Write Chinese and Japanese Characters
  meta(name='description', content='Learn to write Chinese and Japanese characters.')
  meta(name='keywords', content='learn, chinese, japanese, language, study, flashcards, handwriting')
  meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

  include ./includes/fonts

  link(href='/favicon.png', rel='apple-touch-icon')
  link(href='/styles/libraries.css', rel='stylesheet')
  link(href='/styles/application.css', rel='stylesheet')

  link(rel='canonical', href='https://skritter.com/')

  include ./includes/scripts
  include ./includes/tracking

body
  script.
    if (localStorage && (localStorage.getItem('application-user') || '').replace(/"/g, '').length > 0) {
      window.location = window.location.origin + '/dashboard' + window.location.search;
    }
  gelato-application

    gelato-page(data-name='home')

      bootstrap-navbar(data-name='default')

        nav.navbar.navbar-inverse.navbar-fixed-top
          .container

            .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse", aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="/" title=app.locale('navbar.betaTitle'))
                span.skritter-logo
                  img(src="/media/images/skrit-logo-white.png", alt="")

            #navbar-collapse.collapse.navbar-collapse

              ul.nav.navbar-nav
                li(class=currentSection === 'demo' ? 'active' : '')
                  a#demo-link(href="/demo") Try It Out
                li(class=currentSection === 'features' ? 'active' : '')
                  a#features-link(href="/features") Features
                li
                  a(href="https://blog.skritter.com/", target="_blank") Blog
                li
                  a(href="https://discourse.skritter.com/", target="_blank") Forum

              ul.nav.navbar-nav.navbar-right
                li(class=currentSection === 'signup' ? 'active' : '')
                  a#menu-sign-up-btn(href="/signup")= app.locale('common.signUp')
                li(class=currentSection === 'login' ? 'active' : '')
                  a#menu-log-in-btn(href="/login")= app.locale('common.logIn')


      #hero-slider.carousel.slide(data-ride="carousel", data-interval="false")
        //TODO: enable indicators and navigation with more hero images
        //ol.carousel-indicators
          li.active(data-target="#hero-slider", data-slide-to="0")
          li(data-target="#hero-slider", data-slide-to="1")
        .carousel-inner(role="listbox")
          .item.active
            img(src="/media/images/marketing_hero1_phone.jpg", alt="")
            .container
              .carousel-header
                .motto-text= app.locale('pages.home.motto1')
                .motto-text= app.locale('pages.home.motto2')
                a.btn.btn-lg.btn-danger.hidden-xs(href='/demo')= app.locale('pages.home.demoLink')
          //.item
            img(src="/media/images/home_hero2.png", alt="")
        //a.left.carousel-control(href="#hero-slider", role="button", data-ignore="true", data-slide="prev")
          span.glyphicon.glyphicon-chevron-left
        //a.right.carousel-control(href="#hero-slider", role="button", data-ignore="true", data-slide="next")
          span.glyphicon.glyphicon-chevron-right

      section#section-features.light
        .container
          .text-center.visible-xs
            a.btn.btn-lg.btn-danger.push-bottom-40(href='/demo')= app.locale('pages.home.demoLink')
          .header.text-center= app.locale('pages.home.headerText')
          .row
            iframe#promo-video(width='640', height='360', src='https://www.youtube.com/embed/LafTN34lc_Q', frameborder='0', allowfullscreen)
          .row
            .col-sm-6
              .media
                .media-left
                  i.icon.icon-marketing-handwriting-recognition
                .media-body
                  .media-heading= app.locale('pages.features.handwritingTitle')
                  span= app.locale('pages.features.handwritingDescription')
            .col-sm-6
              .media
                .media-left
                  i.icon.icon-marketing-flashcards
                .media-body
                  .media-heading= app.locale('pages.home.flashcardsHeader')
                  span= app.locale('pages.home.flashcardsText')
          .row
            .col-sm-6
              .media
                .media-left
                  i.icon.icon-marketing-book
                .media-body
                  .media-heading= app.locale('pages.home.bookHeader')
                  span= app.locale('pages.home.bookText')
            .col-sm-6
              .media
                .media-left
                  i.icon.icon-marketing-review
                .media-body
                  .media-heading= app.locale('pages.home.reviewHeader')
                  span= app.locale('pages.home.reviewText')
          .row
            .col-xs-12.col-sm-6.ios-store-link
              a#link-apple-store(href="https://itunes.apple.com/us/artist/inkren-llc/id402280587", target="_blank")
                img.badge-link(src="/media/images/badge-apple.png")
            .col-xs-12.col-sm-6.android-store-link
              a#link-google-store(href="https://play.google.com/store/apps/developer?id=Skritter", target="_blank")
                img.badge-link(src="/media/images/badge-google.png")

      section#section-testimonials.dark
        .container
          .header.text-center People using Skritter
          .row
            .col-md-4
              .quote-block If I could only keep one app on my iPod, this would be it without a doubt. Skritter will change your life!
              .quote-footer
                .quote-avatar.pull-left
                  img.img-circle(src="/media/people/testimonials/wendy_werneth.jpg", alt="")
                .quote-footer-text
                  div -- Wendy Werneth
                  div UN Translator, Switzerland
            .col-md-4
              .quote-block Learning to write Chinese characters has never been so fun. From writing zero to 2000+ characters in six months!
              .quote-footer
                .quote-avatar.pull-left
                  img.img-circle(src="/media/people/testimonials/brian_jackson.jpg", alt="")
                .quote-footer-text
                  div -- Brian Jackson
                  div Economist, Alaska
            .col-md-4
              .quote-block Skritter app is so addictive, can't stop practicing! The best thing on my way to mastering Mandarin.
              .quote-footer
                .quote-avatar.pull-left
                  img.img-circle(src="/media/people/testimonials/jan_myler.jpg", alt="")
                .quote-footer-text
                  div -- Jan Myler
                  div Developer, Spain

      section#section-plans.light
        .container.text-center
          .header Flexible plans to match your study needs
          .row
            .col-md-3
              .plan.border-right
                .title 1 month
                .discount
                .price $14.99
                .monthly per month
                a.subscribe.btn.btn-fixed.btn-default(href='/signup/one_month') Subscribe
                .trial Includes 7-day free trial
            .col-md-3
              .plan.border-right
                .title 6 months
                .discount
                .price $59.99
                .monthly $10.00 / month
                a.subscribe.btn.btn-fixed.btn-default(href='/signup/six_months') Subscribe
                .trial Includes 7-day free trial
            .col-md-3
              .plan.border-right
                i.icon.icon-marketing-most-popular
                .title 1 year
                .discount
                .price $99.99
                .monthly $8.33 / month
                a.subscribe.btn.btn-fixed.btn-success(href='/signup/twelve_months') Subscribe
                .trial Includes 7-day free trial
            .col-md-3
              .plan
                i.icon.icon-marketing-best-value
                .title 2 years
                .discount
                .price $179.99
                .monthly $7.50 / month
                a.subscribe.btn.btn-fixed.btn-default(href='/signup/twenty_four_months') Subscribe
                .trial Includes 7-day free trial
          .institutions
            | Buying for a school? Check out our
            | &nbsp;
            a(href="/institutions") school information & pricing page
            | .

      section#section-action.dark
        .container.text-center
          .header Ready to start learning?
          a.btn.btn-success(href='/signup') Start your 7-day free trial

    include ./includes/StaticMarketingFooter

  script.
    if (mixpanel) {
      mixpanel.track('Viewed home page')
      mixpanel.track_links('#link-apple-store', 'Clicked ios app button');
      mixpanel.track_links('#link-google-store', 'Clicked android app button');
      mixpanel.track_links('#promo-video', 'Started home promo video');
    }
